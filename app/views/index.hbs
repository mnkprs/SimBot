<head>
    {{> imports}}
    {{> header}}
</head>

<body>
<h1>Welcome</h1>

<div class="col-xs-12">
    <form method="post" action="/">
        <div class="form-group col-xs-4">
            <label for="selector">Selector</label>
            <select class="form-control" id="selector" name="selector">
                {{#each products}}
                    <option value="binance.{{label}}">{{label}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group col-xs-4">
            <label for="strategy">Strategy</label>
            <select class="form-control strategy" id="strategy" name="strategy">
                {{#each strategyData}}
                    <option value="{{name}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group period-length">
            <label for="period-length">Period</label>
            <input type="text" class="form-control" name="period_length" id="period-length" aria-describedby="period-length-help" value="60m">
            <small id="period-length-help" class="form-text text-muted">Period length. min:1 max:120</small>
        </div>

        <div class="bollinger-options">
            <div class="form-group bollinger-size">
                <label for="bollinger-size">Bollinger Size</label>
                <input type="text" class="form-control" id="bollinger-size" name="bollinger_size" aria-describedby="bollinger-size-help" value="20">
                <small id="bollinger-size-help" class="form-text text-muted">Period size. min:1 max:40</small>
            </div>
            <div class="form-group bollinger-time">
                <label for="bollinger-time">Bollinger Time</label>
                <input type="text" class="form-control" id="bollinger-time" name="bollinger_time" aria-describedby="bollinger-time-help" value="2">
                <small id="bollinger-time-help" class="form-text text-muted">Times of standard deviation between the upper band and the moving averages. Type of float. min:1 max:6</small>
            </div>
            <div class="form-group bollinger-upper-bound-pct">
                <label for="bollinger-upper-bound-pct">Bollinger Upper Bound Percentage</label>
                <input type="text" class="form-control" id="bollinger-upper-bound-pct" name="bollinger_upper_bound_pct" aria-describedby="bollinger-upper-bound-pct-help" value="0">
                <small id="bollinger-upper-bound-pct-help" class="form-text text-muted"> Percentage of the current price should be near the bollinger upper bound before we sell. min:-1 max:30</small>
            </div>
            <div class="form-group bollinger-lower-bound-pct">
                <label for="bollinger-lower-bound-pct">Bollinger Lower Bound Percentage</label>
                <input type="text" class="form-control" id="bollinger-lower-bound-pct" name="bollinger_lower_bound_pct" aria-describedby="bollinger-lower-bound-pct-help" value="0">
                <small id="bollinger-lower-bound-pct-help" class="form-text text-muted"> Percentage of the current price should be near the bollinger lower bound before we buy. min:-1 max:30</small>
            </div>
        </div>
        <div class="neural-options"></div>
        <div class="rsi-options"></div>
        <div class="macd-options"></div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
</body>